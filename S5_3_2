'''
vehiculo1 = {
  "marca":"Toyota",
  "modelo":"Rav4",
  "año":2020
}

vehiculo2 = {
  "marca":"Mazda",
  "modelo":"Cx5",
  "año":2021
}

vehiculo3 = {
  "marca":"Honda",
  "modelo":"CRV",
  "año":2019
}

vehiculos = {
  "vehiculo1":vehiculo1,
  "vehiculo2":vehiculo2,
  "vehiculo3":vehiculo3
}

for x in vehiculos:
  for a,b in vehiculos[x].items():
    if a == "marca":
      marca = b
    if a == "modelo":
      modelo = b
    if a == "año":
      anho = b
  print("La marca " + marca + " su modelo es " + modelo + " y el año de fabricación es " + str(anho) + "\n")


    '''

