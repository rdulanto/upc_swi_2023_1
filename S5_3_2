'''
productos = {
  "prod1":5320,
  "prod2":2523,
  "prod3":6363
}

buscarProd = input("Que producto deseas buscar? ")

if buscarProd in productos:
  print("El producto " + buscarProd + " tiene un valor de " + str(productos[buscarProd]) + " tiene un 20% de desc :" + str(productos[buscarProd]*0.2) )
